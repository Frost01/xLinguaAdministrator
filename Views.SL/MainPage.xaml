<UserControl x:Class="Views.SL.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Views.SL.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.DataContext>
        <viewmodels:MainPageViewModel></viewmodels:MainPageViewModel>
    </UserControl.DataContext>

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Path=Languages}" 
                 DisplayMemberPath="Text"
                 SelectedItem="{Binding Path=SelectedLanguage, Mode=TwoWay}"/>
        <ListBox Grid.Column="1" 
                 ItemsSource="{Binding Path=Wordtypes}" 
                 DisplayMemberPath="Text"
                 SelectedItem="{Binding Path=SelectedWordtype, Mode=TwoWay}"/>
        <ListBox Grid.Column="2"
                 ItemsSource="{Binding Path=Basewords}"
                 DisplayMemberPath="Text"
                 />
     </Grid>
</UserControl>
